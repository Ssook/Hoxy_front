<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="org.techtown.hoxy.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_nav_home_to_imageFragment"
            app:destination="@id/imageFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="org.techtown.hoxy.CommentAllViewFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_comment_all_view" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="org.techtown.hoxy.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/imageFragment"
        android:name="org.techtown.hoxy.ui.image.ImageFragment"
        android:label="ImageFragment" />
    <fragment
        android:id="@+id/resultFragment"
        android:name="org.techtown.hoxy.ui.result.ResultFragment"
        android:label="ResultFragment" />
</navigation>